CREATE TABLE dwh.gold.country_state_dim (
	country_state_sk BIGINT,
	country STRING,
	state STRING
)

CREATE TABLE dwh.gold.customer_dim (
	customer_sk INT,
	gender STRING,
	name STRING,
	country_state_sk BIGINT
)

CREATE TABLE dwh.gold.store_dim (
	store_sk INT,
	country_state_sk BIGINT,
	square_meters INT,
	open_date DATE
)

CREATE TABLE dwh.gold.category_dim (
	category_sk BIGINT,
	category STRING,
	subcategory STRING
)

CREATE TABLE dwh.gold.product_dim (
	product_sk INT,
	product_name STRING,
	brand STRING,
	color STRING,
	unit_cost_usd DECIMAL(10,2),
	unit_price_usd DECIMAL(10,2),
	category_sk BIGINT
)

CREATE TABLE dwh.gold.currency_dim (
	currency_sk BIGINT,
	date DATE,
	currency STRING,
	exchange DECIMAL(8,5)
)

CREATE TABLE dwh.gold.sales_fact (
	order_number INT,
	line_item INT,
	order_date DATE,
	delivery_date DATE,
	customer_sk INT,
	store_sk INT,
	product_sk INT,
	quantity INT,
	currency_sk BIGINT
)

